{
    "meta": {
        "restRoot": "Splunk_TA_New_Relic", 
        "apiVersion": "3.0.0", 
        "name": "Splunk_TA_New_Relic", 
        "displayName": "Splunk Add-on for New Relic", 
        "version": "1.5.0"
    }, 
    "pages": {
        "configuration": {
            "title": "Configuration", 
            "description": "Setup your add-on global configurations", 
            "tabs": [
                {
                    "name": "proxy", 
                    "options": {
                        "saveValidator": "function(formData) { if(!formData.proxy_enabled || formData.proxy_enabled === '0') {return true; } if(!formData.proxy_url) { return 'Proxy Host can not be empty'; } if(!formData.proxy_port) { return 'Proxy Port can not be empty'; } return true; }"
                    }, 
                    "title": "Proxy", 
                    "entity": [
                        {
                            "field": "proxy_enabled", 
                            "type": "checkbox", 
                            "label": "Enable"
                        }, 
                        {
                            "defaultValue": "http", 
                            "options": {
                                "disableSearch": true, 
                                "autoCompleteFields": [
                                    {
                                        "value": "http", 
                                        "label": "http"
                                    }, 
                                    {
                                        "value": "socks4", 
                                        "label": "socks4"
                                    }, 
                                    {
                                        "value": "socks5", 
                                        "label": "socks5"
                                    }
                                ]
                            }, 
                            "field": "proxy_type", 
                            "type": "singleSelect", 
                            "label": "Proxy Type"
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max host length is 4096", 
                                    "type": "string", 
                                    "maxLength": 4096
                                }
                            ], 
                            "field": "proxy_url", 
                            "type": "text", 
                            "label": "Host"
                        }, 
                        {
                            "validators": [
                                {
                                    "range": [
                                        1, 
                                        65535
                                    ], 
                                    "type": "number"
                                }
                            ], 
                            "field": "proxy_port", 
                            "type": "text", 
                            "label": "Port"
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of username is 50", 
                                    "type": "string", 
                                    "maxLength": 50
                                }
                            ], 
                            "field": "proxy_username", 
                            "type": "text", 
                            "label": "Username"
                        }, 
                        {
                            "encrypted": true, 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of password is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "field": "proxy_password", 
                            "type": "text", 
                            "label": "Password"
                        }, 
                        {
                            "field": "proxy_rdns", 
                            "type": "checkbox", 
                            "label": "Reverse DNS resolution"
                        }
                    ]
                }, 
                {
                    "name": "logging", 
                    "title": "Logging", 
                    "entity": [
                        {
                            "defaultValue": "INFO", 
                            "options": {
                                "disableSearch": true, 
                                "autoCompleteFields": [
                                    {
                                        "value": "DEBUG", 
                                        "label": "DEBUG"
                                    }, 
                                    {
                                        "value": "INFO", 
                                        "label": "INFO"
                                    }, 
                                    {
                                        "value": "WARNING", 
                                        "label": "WARNING"
                                    }, 
                                    {
                                        "value": "ERROR", 
                                        "label": "ERROR"
                                    }, 
                                    {
                                        "value": "CRITICAL", 
                                        "label": "CRITICAL"
                                    }
                                ]
                            }, 
                            "field": "loglevel", 
                            "type": "singleSelect", 
                            "label": "Log level"
                        }
                    ]
                }
            ]
        }, 
        "inputs": {
            "services": [
                {
                    "name": "new_relic_single_api_call", 
                    "title": "New Relic Single API Call", 
                    "entity": [
                        {
                            "validators": [
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "type": "regex", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                }, 
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "type": "string", 
                                    "maxLength": 100
                                }
                            ], 
                            "type": "text", 
                            "help": "Enter a unique name for the data input", 
                            "label": "Name", 
                            "required": true, 
                            "field": "name"
                        }, 
                        {
                            "validators": [
                                {
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$", 
                                    "type": "regex", 
                                    "errorMsg": "Interval must be an integer."
                                }
                            ], 
                            "help": "Time interval of input in seconds.", 
                            "field": "interval", 
                            "type": "text", 
                            "label": "Interval"
                        }, 
                        {
                            "defaultValue": "default", 
                            "options": {
                                "blackList": "^_.*$", 
                                "endpointUrl": "data/indexes", 
                                "createSearchChoice": true
                            }, 
                            "type": "singleSelect", 
                            "label": "Index", 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "type": "string", 
                                    "maxLength": 80
                                }
                            ], 
                            "required": true, 
                            "field": "index"
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "help": "Your API Key can be found here: https://rpm.newrelic.com/accounts/<######>/integrations?page=api_keys", 
                            "label": "New Relic API Key", 
                            "required": true, 
                            "field": "api_key"
                        }, 
                        {
                            "defaultValue": "/applications.json ", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "help": "e.g. /applications.json -or- /key_transactions.json   (for more options see https://rpm.newrelic.com/api/explore/)", 
                            "label": "New Relic API URL", 
                            "required": true, 
                            "field": "new_relic_api_url"
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "help": "e.g. page=2   -or- names[]=Instance/connects&names[]=Errors/all", 
                            "label": "URL parameters", 
                            "required": false, 
                            "field": "url_parameters"
                        }
                    ]
                }, 
                {
                    "name": "newrelic_insights", 
                    "title": "New Relic Insights Query", 
                    "entity": [
                        {
                            "validators": [
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "type": "regex", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                }, 
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "type": "string", 
                                    "maxLength": 100
                                }
                            ], 
                            "type": "text", 
                            "help": "Enter a unique name for the data input", 
                            "label": "Name", 
                            "required": true, 
                            "field": "name"
                        }, 
                        {
                            "validators": [
                                {
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$", 
                                    "type": "regex", 
                                    "errorMsg": "Interval must be an integer."
                                }
                            ], 
                            "help": "Time interval of input in seconds.", 
                            "field": "interval", 
                            "type": "text", 
                            "label": "Interval"
                        }, 
                        {
                            "defaultValue": "default", 
                            "options": {
                                "blackList": "^_.*$", 
                                "endpointUrl": "data/indexes", 
                                "createSearchChoice": true
                            }, 
                            "type": "singleSelect", 
                            "label": "Index", 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "type": "string", 
                                    "maxLength": 80
                                }
                            ], 
                            "required": true, 
                            "field": "index"
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "help": "You can create or locate your API Key here:  https://insights.newrelic.com/accounts/XXXXXX/manage/api_keys", 
                            "label": "Insights API Key", 
                            "required": true, 
                            "field": "insights_api_key"
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "help": "This is the number in your New Relic url.  e.g.: https://rpm.newrelic.com/accounts/<######>/applications", 
                            "label": "New Relic Account Number", 
                            "required": true, 
                            "field": "account_number"
                        }, 
                        {
                            "defaultValue": "SELECT average(duration) FROM PageView SINCE 5 Minutes ago", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "help": "Enter the NRQL Query to execute", 
                            "label": "NRQL Query", 
                            "required": true, 
                            "field": "nrql_query"
                        }
                    ]
                }, 
                {
                    "name": "newrelic_account", 
                    "title": "New Relic Account Summary", 
                    "entity": [
                        {
                            "validators": [
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "type": "regex", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                }, 
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "type": "string", 
                                    "maxLength": 100
                                }
                            ], 
                            "type": "text", 
                            "help": "Enter a unique name for the data input", 
                            "label": "Name", 
                            "required": true, 
                            "field": "name"
                        }, 
                        {
                            "validators": [
                                {
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$", 
                                    "type": "regex", 
                                    "errorMsg": "Interval must be an integer."
                                }
                            ], 
                            "help": "Time interval of input in seconds.", 
                            "field": "interval", 
                            "type": "text", 
                            "label": "Interval"
                        }, 
                        {
                            "defaultValue": "default", 
                            "options": {
                                "blackList": "^_.*$", 
                                "endpointUrl": "data/indexes", 
                                "createSearchChoice": true
                            }, 
                            "type": "singleSelect", 
                            "label": "Index", 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "type": "string", 
                                    "maxLength": 80
                                }
                            ], 
                            "required": true, 
                            "field": "index"
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "help": "This can be found in the URL when you log into New Relic.  e.g.  https://rpm.newrelic.com/accounts/######/...", 
                            "label": "New Relic Account Number", 
                            "required": true, 
                            "field": "account"
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "help": "Your API Key can be found here: https://rpm.newrelic.com/accounts/######/integrations?page=api_keys", 
                            "label": "New Relic API Key", 
                            "required": true, 
                            "field": "api_key"
                        }
                    ]
                }
            ], 
            "title": "Inputs", 
            "description": "Manage the data inputs", 
            "table": {
                "moreInfo": [
                    {
                        "field": "name", 
                        "label": "Name"
                    }, 
                    {
                        "field": "interval", 
                        "label": "Interval"
                    }, 
                    {
                        "field": "index", 
                        "label": "Index"
                    }, 
                    {
                        "field": "disabled", 
                        "label": "Status"
                    }, 
                    {
                        "field": "api_key", 
                        "label": "New Relic API Key"
                    }, 
                    {
                        "field": "new_relic_api_url", 
                        "label": "New Relic API URL"
                    }, 
                    {
                        "field": "url_parameters", 
                        "label": "URL parameters"
                    }, 
                    {
                        "field": "insights_api_key", 
                        "label": "Insights API Key"
                    }, 
                    {
                        "field": "account_number", 
                        "label": "New Relic Account Number"
                    }, 
                    {
                        "field": "nrql_query", 
                        "label": "NRQL Query"
                    }, 
                    {
                        "field": "account", 
                        "label": "New Relic Account Number"
                    }
                ], 
                "header": [
                    {
                        "field": "name", 
                        "label": "Name"
                    }, 
                    {
                        "field": "interval", 
                        "label": "Interval"
                    }, 
                    {
                        "field": "index", 
                        "label": "Index"
                    }, 
                    {
